<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/screen_margin70"
        android:layout_height="@dimen/screen_margin70"
        android:layout_marginStart="@dimen/screen_standard_margin"
        android:layout_marginTop="@dimen/screen_edge_standard_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_edge_standard_margin"
        android:layout_marginEnd="@dimen/screen_standard_margin"
        android:textSize="@dimen/text_size_def"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="@+id/user_image"
        tools:text="Rashid Turkmenmetok" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        tools:text="\@green_tag" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_tweet_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_standard_margin"
        android:layout_marginEnd="@dimen/screen_standard_margin"
        android:layout_marginTop="@dimen/screen_edge_standard_margin"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        tools:text="She is saying she wasn't into 'misogynistic hiphop' back in a 2017 interview: My words became a divider in a time where togetherness and unity is crucial. I f**ked up and I sincerely apologize. I'm committed to using my voice for healing and change" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        android:layout_marginTop="@dimen/screen_edge_standard_margin"
        android:layout_marginBottom="@dimen/screen_edge_standard_margin"
        app:layout_constraintTop_toBottomOf="@+id/user_tweet_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>